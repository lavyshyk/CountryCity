<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNativName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textColor="@color/NN"
            android:textSize="@dimen/_48sp"
            android:textStyle="bold"
            tools:text="nativename"
            tools:textSize="@dimen/_48sp" />

        <androidx.appcompat.widget.LinearLayoutCompat

            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marg_item"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/text_size_24"
                tools:text="Country" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCapital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/text_view_18sp"
                tools:text="capital" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPopulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/_10sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/_10sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>
    <com.lavyshyk.countrycity.ui.customView.CustomStateBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_view"
        android:layout_margin="@dimen/_4dp"
        android:foreground="@color/black"
        tools:visibility="visible" />

</LinearLayout>