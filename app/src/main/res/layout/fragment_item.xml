<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item"
    android:orientation="vertical"
    android:layout_margin="@dimen/marg_item">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_view_18sp"
        android:gravity="end"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCapital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_view_capit"
        android:gravity="end"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_view"
        android:foreground="@color/black"/>

</androidx.appcompat.widget.LinearLayoutCompat>

